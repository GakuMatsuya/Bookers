<body>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title%></td>
        <td><%= book.body %></td>
        <td><%= link_to "show", book_path(book.id) %></td>
        <td><%= link_to "edit", edit_book_path(book.id) %></td>
        <td>destroy</td>
      </tr>
    <% end %>  
  </tbody>
</table>

</br>
<h2>New Book</h2>
<%= form_with model:@book, local:true do |f| %>
<div class="field">
  <p>Title</p>
  <%= f.text_field :title %>
</div>

<div class="field"> 
  <p>Body</p>
  <%= f.text_area :body %>
</div>  
  
<div class="actions">
  <%= f.submit "Create Book" %>
</div>
<% end %>
</body>